<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.picbit.info.android.SinglePostView">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:orientation="vertical">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/SinglePostVideoLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.youtube.player.YouTubePlayerView
                    android:id="@+id/post_youtubeVideo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff" />
            </LinearLayout>

            <ImageView
                android:visibility="gone"
                android:id="@+id/singlePostImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                tools:src="@drawable/insetimage" />


            <TextView
                android:id="@+id/singlePostTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:autoLink="web"
                android:padding="5dp"
                android:text="Title goes Here..."
                android:textIsSelectable="true"
                android:textSize="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="1dp">

                    <TextView
                        android:id="@+id/singlePostDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:autoLink="web"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="60dp"
                        android:text="Descreption about image goes here.."
                        android:textIsSelectable="true"
                        android:textSize="14dp" />

                </ScrollView>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/singlePostRemoveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:padding="5dp"
        android:visibility="gone"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/trash" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/GoBackFloat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_margin="@dimen/fab_margin"
        android:onClick="ParagraphRead"
        android:src="@drawable/backpage" />


</android.support.design.widget.CoordinatorLayout>
